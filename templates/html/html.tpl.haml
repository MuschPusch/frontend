!!! 5
/[if lt IE 7]
  %html.no-js.lt-ie10.lt-ie9.lt-ie8.lt-ie7
/[if IE 7]
  %html.no-js.lt-ie10.lt-ie9.lt-ie8
/[if IE 8]
  %html.no-js.lt-ie10.lt-ie9
/[if IE 9]
  %html.no-js.lt-ie10
%html.no-js
  %head
    = $head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
    %title=$head_title
    = $styles
    /[if lt IE 9]
      %script(src="#{file_create_url(base_path().$directory.'/assets/scripts/vendor/respond.min.js')}")
    %script(src="#{file_create_url(base_path().$directory.'/assets/scripts/vendor/modernizr.js')}")
    = drupal_get_js()
  %body
  .Page<>
    = $page_top, $page, $page_bottom
