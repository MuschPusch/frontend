-# Template to control the add content modal.
.PanelsContentModal.PanelsContentModal--addContent.Grid.Grid--withGutter
  .PanelsSectionColumn.PanelsSectionColumn--categories.Grid-cell.u-size1of4
    .inside
      .PanelsCategories-box
        - foreach ($categories_array as $category)
          = $category
      = $root_content
  .Grid-cell.u-size-3of4
    = $messages
    - if (!empty($header))
      .PanelsCategories-description
        = $header

    - if (!empty($columns))
      .PanelsSectionColumns
        - foreach ($columns as $column_id => $column)
          .PanelsSectionColumn.PanelsSectionCoolumn-{$column_id}
            .inside
              = $column
